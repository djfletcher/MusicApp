<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= button_to "Sign Up", new_user_url, method: :get %>
  <% if current_user %>
    <%= button_to "Log Out", session_url, method: :delete %>
  <% else %>
    <%= button_to "Log In", new_session_url, method: :get %>
  <% end %>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color:red"><%= error %></p>
  <% end %>
<% end %>

<h1>~The Mediocre Bands Hall of Fame~</h1>
<%= yield %>


<nav>
  <%= button_to "Add an okayish band", new_band_url, method: :get %>
  <%= button_to "Add a mildly unoffensive album", new_album_url, method: :get %>
  <%= button_to "Add a silly tune", new_track_url, method: :get %>
</nav>
</body>
</html>
